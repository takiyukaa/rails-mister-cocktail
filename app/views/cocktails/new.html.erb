<div class="container">
  <h1>Add a new Cocktail</h1>

  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

  <%= link_to cocktails_path do %>
    <button type="button" class="btn btn-primary">Back</button>
  <% end %>
</div>
