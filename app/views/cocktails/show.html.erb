<div class="container">

  <div class="card-white">
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg", alt: "alttext" %>

    <div class="card-cocktail-info">

      <div class="card-cocktail-title">
        <h1><%= @cocktail.name %></h1>
      </div>

      <div class="card-cocktail-ingredients">
        <h2>Ingredients</h2>
        <ul class="list-group list-group-flush">
          <% @cocktail.doses.each do |dose| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= "#{dose.description} of #{dose.ingredient.name}" %>
              <span>
                <%= link_to dose_path(dose), method: :delete, id: "delete-link", class: "hidden" do %>
                  <i class="fas fa-trash" id="sweet-alert-demo"></i>
                <% end %>
              </span>
            </li>
          <% end %>
        </ul>
      </div>
      <%= link_to new_cocktail_dose_path(@cocktail), class: 'add-dose btn btn-primary' do %>
        Add a new dose
      <% end %>
    </div>
  </div>

  <%= link_to cocktails_path, class: 'btn btn-light' do %>
    Back
  <% end %>
</div>
