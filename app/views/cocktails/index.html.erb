<div class="container">
  <h1>Cocktails</h1>
  <%= link_to new_cocktail_path do %>
    <button type="button" class="btn btn-primary">Add a new Cocktail</button>
  <% end %>

  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <p><%= cocktail.name %></p>
        <%= link_to cocktail_path(cocktail) do %>
          <button type="button" class="btn btn-light">See Details</button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
